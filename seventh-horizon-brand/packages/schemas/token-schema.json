{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.seventh-horizon.dev/theme-tokens.schema.json",
  "title": "Theme Tokens",
  "type": "object",
  "required": ["$schema", "name", "version", "colors"],
  "properties": {
    "$schema": { "type": "string" },
    "name": { "type": "string" },
    "version": { "type": "string" },
    "colors": {
      "type": "object",
      "required": ["background", "text", "accent"],
      "properties": {
        "background": { "type": "string", "pattern": "^#([0-9a-fA-F]{6}|[0-9a-fA-F]{8})$" },
        "text": { "type": "string", "pattern": "^#([0-9a-fA-F]{6}|[0-9a-fA-F]{8})$" },
        "accent": { "type": "string", "pattern": "^#([0-9a-fA-F]{6}|[0-9a-fA-F]{8})$" }
      },
      "additionalProperties": false
    },
    "motion": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "durations": {
          "type": "object",
          "properties": {
            "fast": { "type": "number" },
            "base": { "type": "number" },
            "slow": { "type": "number" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
